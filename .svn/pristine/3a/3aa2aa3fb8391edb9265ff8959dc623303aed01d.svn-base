<?xml version="1.0" encoding="utf-8"?>
<!--<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">-->
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">
        <FrameLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_curve_grey_new"
            android:minHeight="65dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            >
            <TextView
                android:id="@+id/txtLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/adapter_compliance_logo_circle"
                android:gravity="center"
                android:minHeight="35dp"
                android:minWidth="35dp"
                android:textAllCaps="true"
                android:textAppearance="@style/iposfontstyle"
                android:textColor="@color/dark_grey_color"
                android:textSize="13sp"
                tools:text="Y" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/txtLogo"
                android:paddingLeft="8dp"
                tools:text="Monthly Book Closing"
                android:textAppearance="@style/iposfontstyle"
                android:textColor="@color/ipos_block_title_color"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ipos_block_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/txtLogo"

                android:paddingLeft="8dp"
                android:text=""
                android:textAppearance="@style/iposfontstyle"
                android:textColor="@color/dark_grey_color"
                android:textSize="11sp"
                tools:text="My Store 1 | Yearly Recurring Activity" />

            <TextView
                android:id="@+id/mTxtdueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ipos_block_txt1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/txtLogo"

                android:paddingLeft="8dp"
                android:text=""
                android:textAppearance="@style/iposfontstyle"
                android:textColor="@color/color_pending"
                android:textSize="11sp"
                tools:text="Due tomorrow | 1 day left" />

            <ImageView
                android:id="@+id/ic_com_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_chevron_right_black_36dp" />

            <ImageView
                android:id="@+id/ic_com_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/ic_com_touch"
                android:src="@drawable/ic_today_black_36dp" />

        </RelativeLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>

<!--
</layout>-->
