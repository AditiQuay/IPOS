<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        card_view:cardElevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim_2"
                android:orientation="horizontal"
                android:padding="@dimen/dim_2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_marginTop="@dimen/dim_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/dim_2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!--  <fr.ganfra.materialspinner.MaterialSpinner
                                  android:id="@+id/spinnerPartnerType"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="@dimen/dim_4"
                                  android:layout_marginRight="@dimen/dim_4"

                                  app:ms_alignLabels="true"
                                  android:clickable="false"
                                  app:ms_baseColor="@color/grey"
                                  app:ms_enableErrorLabel="false"
                                  app:ms_enableFloatingLabel="true"
                                  app:ms_errorColor="@color/red"
                                  app:ms_floatingLabelColor="@color/grey"
                                  app:ms_floatingLabelText="Partner Type *"
                                  app:ms_highlightColor="@color/highlight"
                                  app:ms_hint="Partner Type *"
                                  app:ms_hintColor="@color/grey"
                                  app:ms_multiline="false" />-->
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/spinnerPartnerTypeInput"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editPartnerType"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:fontFamily="@font/titilliumwebregular"
                                    android:hint="Partner Type *"
                                    android:maxLines="1"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilCompanyName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editCompanyName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/titilliumwebregular"
                                    android:hint="Company Name *"
                                    android:maxLines="1"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_marginTop="@dimen/dim_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/dim_2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilCinName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editCIN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:fontFamily="@font/titilliumwebregular"
                                    android:hint="CIN *"
                                    android:inputType="textCapCharacters"
                                    android:maxLength="21"
                                    android:maxLines="1"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilPanName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editPAN"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:fontFamily="@font/titilliumwebregular"
                                    android:hint="PAN *"
                                    android:inputType="textCapCharacters"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_marginTop="@dimen/dim_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/dim_2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilkeyContactName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editContactPerson"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/titilliumwebregular"
                                    android:hint="Key Contact Person"
                                    android:maxLines="1"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- <fr.ganfra.materialspinner.MaterialSpinner
                                 android:id="@+id/spinnerKeyContact"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_marginLeft="@dimen/dim_4"
                                 android:layout_marginRight="@dimen/dim_4"
                                 app:ms_alignLabels="true"
                                 app:ms_baseColor="@color/grey"
                                 app:ms_enableErrorLabel="false"
                                 android:clickable="false"
                                 app:ms_enableFloatingLabel="true"
                                 app:ms_errorColor="@color/red"
                                 app:ms_floatingLabelColor="@color/grey"
                                 app:ms_floatingLabelText="KycContacttact Person *"
                                 app:ms_highlightColor="@color/highlight"
                                 app:ms_hint="KycContacttact Position *"
                                 app:ms_hintColor="@color/grey"
                                 app:ms_multiline="false" />-->
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/editKeyContactPosInput"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/editKeyContactPos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:fontFamily="@font/titilliumwebregular"
                                    android:hint="Key Contact Position *"
                                    android:maxLines="1"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxHeight="@dimen/dim_300"
        android:minHeight="@dimen/dim_250"
        app:cardCornerRadius="@dimen/dim_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rLayoutLocationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_8">

                <ImageView
                    android:id="@+id/imageViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_location" />

                <TextView
                    android:id="@+id/textViewBusinessInfoHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_8"
                    android:layout_toRightOf="@+id/imageViewLocation"
                    android:alpha="0.7"
                    android:text="Business Location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/universal_text_size18" />

            </RelativeLayout>

            <View
                android:id="@+id/viewSeperator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_2"
                android:layout_below="@+id/rLayoutLocationTitle"
                android:layout_marginBottom="@dimen/dim_4"
                android:layout_marginTop="@dimen/dim_4"
                android:background="@color/app_background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewSeperator"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dim_2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_2"
                            android:layout_marginRight="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilState"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editState"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:cursorVisible="false"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="State *"
                                        android:inputType="textCapWords"
                                        android:maxLines="1"
                                        android:textSize="@dimen/universal_text_size14" />

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilCityName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editCity"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:cursorVisible="false"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="City *"
                                        android:inputType="textCapWords"
                                        android:maxLines="1"
                                        android:textSize="@dimen/universal_text_size14" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dim_2"
                            android:layout_marginRight="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilPinCodeName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editPinCode"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:cursorVisible="false"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="Pin Code *"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:maxLines="1"
                                        android:textSize="@dimen/universal_text_size14" />

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilZoneName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editZone"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:cursorVisible="false"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="Zone *"
                                        android:inputType="textCapWords"
                                        android:maxLines="1"
                                        android:textSize="@dimen/universal_text_size16" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

