<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_16"

        app:cardCornerRadius="@dimen/dim_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dim_2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_2"
                            android:layout_marginRight="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_2">

                         <!--   <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/dim_4">

                                <fr.ganfra.materialspinner.MaterialSpinner
                                    android:id="@+id/spinnerSecurityCheque"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dim_4"
                                    android:layout_marginRight="@dimen/dim_4"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    app:ms_alignLabels="true"
                                    app:ms_baseColor="@color/grey"
                                    app:ms_enableErrorLabel="false"
                                    app:ms_enableFloatingLabel="true"
                                    app:ms_errorColor="@color/red"
                                    app:ms_floatingLabelColor="@color/grey"
                                    app:ms_floatingLabelText="Security Check *"
                                    app:ms_highlightColor="@color/highlight"
                                    app:ms_hint="Security Check *"
                                    app:ms_hintColor="@color/grey"
                                    app:ms_multiline="false" />
                            </LinearLayout>
-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/editDrawnAccountNoInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editDrawnAccountNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="Drawn on A/c *"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:inputType="number"
                                        android:maxLines="1"
                                        android:textSize="@dimen/universal_text_size14" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dim_2"
                            android:layout_marginRight="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/editChequeNoInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editChequeNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="Cheque Number *"
                                        android:maxLines="1"

                                        android:textSize="@dimen/universal_text_size14" />

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/editMaxLimitInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/editMaxLimit"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:enabled="false"
                                        android:focusable="false"
                                        android:fontFamily="@font/titilliumwebregular"
                                        android:hint="Max Limit Amount *"
                                        android:maxLines="1"
                                        android:inputType="number"
                                        android:textSize="@dimen/universal_text_size16" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

