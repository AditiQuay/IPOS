<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/button_rectangle_primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/styleWhiteTextColor16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/ImvClose"
                android:alpha="0.7"
                android:fontFamily="@font/titilliumwebregular"
                android:gravity="center"
                android:text="Points Info" />

            <ImageView
                android:id="@+id/imvClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/dim_5"
                android:gravity="top"
                android:padding="@dimen/dim_2"
                android:src="@drawable/ic_action_close_white" />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dim_4">

        <LinearLayout
            android:id="@+id/llName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayoutView"
                android:orientation="horizontal"
                android:padding="@dimen/dim_4">

                <TextView
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:text="Customer Points" />

                <TextView
                    android:id="@+id/textViewCustomerPoints"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_4">

                <TextView
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:text="Total Points Per Value" />

                <TextView
                    android:id="@+id/textViewCustomerTotalPoints"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_4">

                <TextView
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:text="Total Redeem Points" />

                <TextView
                    android:id="@+id/textViewTotalRedeemPoints"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_4">

                <TextView
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:text="Total Adjust Points" />

                <TextView
                    android:id="@+id/textViewTotalAdjustedPoints"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_4">

                <TextView
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:text="Total Expire Points" />

                <TextView
                    android:id="@+id/textViewTotalExpirePoints"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_4">

                <TextView
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:text="Total Reverse Points" />

                <TextView
                    android:id="@+id/textViewTotalReversePoints"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/titilliumwebregular"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>