<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_45"
            android:layout_marginTop="@dimen/dim_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvPointsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_16"
                android:src="@drawable/wallet" />

            <quay.com.ipos.ui.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_weight="1"
                android:fontFamily="@font/titilliumwebregular"
                android:text="@string/wallet"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/backgroundgrey" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:padding="@dimen/dim_4">

            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvTotalWalletSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_4"
                android:fontFamily="@font/titilliumwebregular"
                android:text="Total wallet sale"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp"
                app:textAllCaps="false" />

            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvTotalWalletSaleAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim_8"
                android:fontFamily="@font/titilliumwebregular"
                android:text="9292.00"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp"
                app:textAllCaps="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/backgroundgrey" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:padding="@dimen/dim_4">

            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvConfirmWalletSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/titilliumwebregular"
                android:layout_marginLeft="@dimen/dim_4"
                android:text="Confirm wallet sale value"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp"
                app:textAllCaps="false" />

            <quay.com.ipos.ui.CustomEditText
                android:id="@+id/tvConfirmWalletSaleAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dim_8"
                android:background="@null"
                android:gravity="right"
                android:hint="Enter value"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/dark_text_color"
                android:textColorHint="@color/grey"
                android:textSize="14dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/backgroundgrey" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:padding="@dimen/dim_4">

            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvWalletDifference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_4"
                android:text="Difference"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:fontFamily="@font/titilliumwebregular"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                app:textAllCaps="false" />

            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvWalletDifferenceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim_8"
                android:text="9292.00"
                android:textAllCaps="false"
                android:fontFamily="@font/titilliumwebregular"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                app:textAllCaps="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dim_8"
            android:background="@color/backgroundgrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:padding="@dimen/dim_4">

            <CheckBox
                android:id="@+id/checkBoxWalletAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebregular"
                android:buttonTint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:text="I agree" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>