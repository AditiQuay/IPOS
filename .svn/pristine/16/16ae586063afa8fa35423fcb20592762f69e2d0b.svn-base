<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rLayoutProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_background_color"
                    android:paddingBottom="@dimen/dim_8"
                    android:minHeight="50dp"
                    android:paddingLeft="@dimen/dim_8"
                    android:paddingRight="@dimen/dim_8"
                    android:paddingTop="@dimen/dim_8">

                    <TextView
                        android:id="@+id/textViewDocumentsVaultHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents Vault"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/universal_text_size16" />
                </RelativeLayout>

                <include layout="@layout/kyc_photo" />
                <include layout="@layout/kyc_pan"/>
                <include layout="@layout/kyc_appointment"/>
                <include layout="@layout/kyc_anexuredocument"/>
                <include layout="@layout/kyc_compilance_document"/>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>