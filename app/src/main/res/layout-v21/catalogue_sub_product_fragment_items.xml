<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/dim_200"
    app:cardCornerRadius="@dimen/dim_4"
    android:layout_margin="@dimen/dim_8"
    card_view:cardElevation="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewProduct"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_100"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dim_8"
                    android:src="@drawable/cyld" />

                <RelativeLayout
                    android:id="@+id/rLayoutTopStrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:alpha="0.7"
                    android:background="@drawable/strip_transparent"
                    android:padding="@dimen/dim_8">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/badge_white" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/viewLineCenter"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dim_8"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_8"
                android:alpha="0.7"
                android:background="@color/expand_list_color" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_weight="2"
                android:padding="@dimen/dim_4">

                <TextView
                    android:id="@+id/textViewProductName"
                    style="@style/stylePrimaryTextColor16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginRight="@dimen/dim_8"
                    android:alpha="0.7"
                    android:ems="7"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="Soudafoan 1K" />

                <TextView
                    android:id="@+id/textViewFeature"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewProductName"
                    android:layout_marginRight="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_4"
                    android:alpha="0.7"
                    android:ems="7"
                    android:gravity="left|clip_vertical"
                    android:lines="2"
                    android:text="High Performance Straw" />

                <TextView
                    android:id="@+id/textViewPrice"
                    style="@style/stylePrimaryTextColor14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewFeature"
                    android:layout_marginTop="@dimen/dim_8"
                    android:alpha="0.7"
                    android:ems="5"
                    android:lines="1"
                    android:text="$ 200" />

                <TextView
                    android:id="@+id/textViewOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/green"
                    android:textSize="@dimen/universal_text_size16"
                    android:layout_below="@+id/textViewFeature"
                    android:layout_marginRight="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_8"
                    android:alpha="0.7"
                    android:lines="1"
                    android:text="On Offer" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewLineBottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dim_4"
            android:layout_marginRight="@dimen/dim_4"
            android:layout_marginTop="@dimen/dim_2"
            android:alpha="0.7"
            android:background="@color/expand_list_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lLayoutBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnDataSheet"
                        style="@style/styleWhiteTextColor14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stateListAnimator="@null"
                        android:backgroundTint="@color/button_tint_gray"
                        android:drawableLeft="@drawable/data"
                        android:text="DataSheet"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnCalculator"
                        style="@style/styleWhiteTextColor14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stateListAnimator="@null"
                        android:backgroundTint="@color/button_tint_gray"
                        android:drawableLeft="@drawable/calculator"
                        android:text="Calculator"
                        android:textAllCaps="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnCart"
                        style="@style/styleWhiteTextColor14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stateListAnimator="@null"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableLeft="@drawable/cart_white"
                        android:text="Cart"
                        android:textAllCaps="false" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>