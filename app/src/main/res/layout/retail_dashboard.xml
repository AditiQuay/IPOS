<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundgrey"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llTopIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvUserAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:src="@drawable/ic_action_person_add" />
        />

        <ImageView
            android:id="@+id/imvPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:src="@drawable/ic_action_pin" />

        <ImageView
            android:id="@+id/imvBilling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:src="@drawable/ic_action_billing" />

        <ImageView
            android:id="@+id/imvDicount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:src="@drawable/ic_action_discount" />

        <ImageView
            android:id="@+id/imvRedeem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:src="@drawable/ic_action_redeem" />

        <ImageView
            android:id="@+id/imvGlobe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_15"
            android:src="@drawable/ic_action_online_shop" />


        <quay.com.ipos.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:text="@string/barcode"
            android:textColor="@color/dark_text_color"
            android:textSize="@dimen/text_size_15sp" />

        <ToggleButton
            android:id="@+id/chkBarCode"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@drawable/toggle_selector"
            android:checked="true"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imvQRCode"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/llTopIcon"
        android:layout_gravity="center"
        android:background="@color/sky_blue"
        android:paddingBottom="@dimen/dim_5"
        android:paddingTop="@dimen/dim_5"
        android:src="@drawable/ic_barcode" />
    <!--  <android.support.v4.widget.NestedScrollView
          android:id="@+id/nestedScrollview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fillViewport="true"
          android:scrollbars="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imvQRCode">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dim_8">


            <LinearLayout
                android:id="@+id/layout_otc_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="none" />
        <LinearLayout
            android:id="@+id/llBelowPaymentDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/label_gray"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dim_5"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:paddingTop="@dimen/dim_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvItemNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/items"
                        android:textColor="@color/accent_color"
                        android:textSize="@dimen/text_size_15sp" />

                    <View
                        android:layout_width="@dimen/dim_1"
                        android:layout_height="@dimen/dim_10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dim_10"
                        android:layout_marginRight="@dimen/dim_10"
                        android:background="@color/transparent" />

                    <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvItemQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/qty"
                        android:textSize="@dimen/text_size_15sp" />

                    <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvTotalItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/Rs"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTotalGST"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvTotalGST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/total_gst"
                        android:textColor="@color/accent_color"
                        android:textSize="@dimen/text_size_15sp" />


                    <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvMoreDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dim_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/more_details"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_11sp" />

                    <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvTotalItemGSTPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/Rs"
                        android:textSize="@dimen/text_size_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTotalDiscountDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <quay.com.ipos.ui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/total_discount"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_15sp" />

                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvTotalDiscountDetail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="(items 1)"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_11sp" />

                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvTotalDiscountPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/Rs"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <quay.com.ipos.ui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/cgst"
                            android:textSize="@dimen/text_size_15sp" />

                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvCGSTPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/Rs"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <quay.com.ipos.ui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/sgst"
                            android:textSize="@dimen/text_size_15sp" />

                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSGSTPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/Rs"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <quay.com.ipos.ui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/rounding_off"
                            android:textSize="@dimen/text_size_15sp" />

                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvLessDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/less_details"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_11sp" />

                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvRoundingOffPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/Rs"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dim_5"
                    android:paddingLeft="@dimen/dim_10"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_5"
                    android:src="@drawable/ic_action_discount" />

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvTotalDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim_5"
                    android:text="@string/Rs"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />

                <quay.com.ipos.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:gravity="center_vertical"
                    android:text="@string/pay"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvPay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim_10"
                    android:paddingRight="@dimen/dim_10"
                    android:text="@string/Rs"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/text_size_15sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />

                <ImageView
                    android:id="@+id/imvRight"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/colorAccentDark"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dim_15"
                    android:paddingRight="@dimen/dim_15"
                    android:src="@drawable/ic_action_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOTCSelect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:padding="@dimen/dim_10"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/chkOTC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

                <quay.com.ipos.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim_5"
                    android:text="@string/select_all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp"
                    app:typeface="Roboto-Regular.ttf" />

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvOTCDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim_10"
                    android:text="@string/otc_discount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp"
                    app:typeface="Roboto-Regular.ttf" />

                <TextView
                    android:id="@+id/tvRight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/dim_5"
                    android:text="@string/fa_right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>
    <ImageView
        android:id="@+id/imageFloat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:src="@drawable/ic_action_pin"
        android:background="@drawable/circle_btn"/>
