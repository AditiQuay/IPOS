<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dim_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        card_view:cardElevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim_2"
                android:orientation="horizontal"
                android:padding="@dimen/dim_2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_4"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_marginTop="@dimen/dim_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/dim_2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dim_4">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/accounHolderSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dim_4"
                                android:layout_marginRight="@dimen/dim_4"
                                app:ms_alignLabels="true"
                                app:ms_baseColor="@color/grey"
                                app:ms_enableErrorLabel="false"
                                app:ms_enableFloatingLabel="true"
                                app:ms_errorColor="@color/red"
                                app:ms_floatingLabelColor="@color/grey"
                                app:ms_floatingLabelText="Partner Type *"
                                app:ms_highlightColor="@color/highlight"
                                app:ms_hint="Partner Type *"
                                app:ms_hintColor="@color/grey"
                                app:ms_multiline="false" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilAccountName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/tieAccountField"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Account No *"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_marginTop="@dimen/dim_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/dim_2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilAccountType"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/tieaccounTypeField"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Accoun Type *"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilBankName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/tieBankField"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Bank Name *"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_marginTop="@dimen/dim_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/dim_2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilifscCode"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/tieifscField"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="IFSC Code *"
                                    android:textSize="@dimen/universal_text_size14" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dim_4">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:id="@+id/branchAddressSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dim_4"
                                android:layout_marginRight="@dimen/dim_4"
                                app:ms_alignLabels="true"
                                app:ms_baseColor="@color/grey"
                                app:ms_enableErrorLabel="false"
                                app:ms_enableFloatingLabel="true"
                                app:ms_errorColor="@color/red"
                                app:ms_floatingLabelColor="@color/grey"
                                app:ms_floatingLabelText="Branch Address *"
                                app:ms_highlightColor="@color/highlight"
                                app:ms_hint="Branch Address *"
                                app:ms_hintColor="@color/grey"
                                app:ms_multiline="false" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_16"
        android:maxHeight="@dimen/dim_300"
        android:minHeight="@dimen/dim_250"
        app:cardCornerRadius="@dimen/dim_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dim_2">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_2"
                            android:layout_marginRight="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/dim_4">

                                <fr.ganfra.materialspinner.MaterialSpinner
                                    android:id="@+id/securityCheckSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dim_4"
                                    android:layout_marginRight="@dimen/dim_4"
                                    app:ms_alignLabels="true"
                                    app:ms_baseColor="@color/grey"
                                    app:ms_enableErrorLabel="false"
                                    app:ms_enableFloatingLabel="true"
                                    app:ms_errorColor="@color/red"
                                    app:ms_floatingLabelColor="@color/grey"
                                    app:ms_floatingLabelText="Security Check *"
                                    app:ms_highlightColor="@color/highlight"
                                    app:ms_hint="Security Check *"
                                    app:ms_hintColor="@color/grey"
                                    app:ms_multiline="false" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilDrawnOnName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/tieDrawanOnField"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="Drawn on A/c *"
                                        android:textSize="@dimen/universal_text_size14" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dim_2"
                            android:layout_marginRight="@dimen/dim_2"
                            android:layout_marginTop="@dimen/dim_8"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:padding="@dimen/dim_2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/dim_4">

                                <fr.ganfra.materialspinner.MaterialSpinner
                                    android:id="@+id/chequeNumSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dim_4"
                                    android:layout_marginRight="@dimen/dim_4"
                                    app:ms_alignLabels="true"
                                    app:ms_baseColor="@color/grey"
                                    app:ms_enableErrorLabel="false"
                                    app:ms_enableFloatingLabel="true"
                                    app:ms_errorColor="@color/red"
                                    app:ms_floatingLabelColor="@color/grey"
                                    app:ms_floatingLabelText="Cheque Number *"
                                    app:ms_highlightColor="@color/highlight"
                                    app:ms_hint="Cheque Number *"
                                    app:ms_hintColor="@color/grey"
                                    app:ms_multiline="false" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/tilMaxLimit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.design.widget.TextInputEditText
                                        android:id="@+id/tieMaxLimtField"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:hint="Max Limit Amount *"
                                        android:textSize="@dimen/universal_text_size16" />

                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

