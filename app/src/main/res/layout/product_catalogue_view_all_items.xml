<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/strip_color"
    card_view:cardCornerRadius="@dimen/dim_12"
    card_view:cardElevation="@dimen/dim_4"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/llGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_8"
        android:minHeight="?android:attr/listPreferredItemHeightSmall">

        <View
            android:id="@+id/vGrp"
            android:layout_width="@dimen/dim_2"
            android:layout_height="match_parent"
            android:background="@color/menu_background"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="@dimen/dim_70"
            android:layout_height="@dimen/dim_70"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/window" />

        <TextView
            android:id="@+id/textViewName"
            style="@style/stylePrimaryTextColor14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imageViewGroupIcon"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="10dp"
            android:text="Item Name" />


    </LinearLayout>
</android.support.v7.widget.CardView>