<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_8"
        android:paddingTop="@dimen/dim_8">


        <TextView
            android:id="@+id/grnCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/titilliumwebregular"
            android:text="0" />

        <TextView
            android:id="@+id/grnHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/titilliumwebregular"
            android:text="GRN Qty" />


    </LinearLayout>

    <View
        android:layout_width="@dimen/dim_0.5"
        android:layout_height="match_parent"
        android:background="@color/app_background_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_8"
        android:paddingTop="@dimen/dim_8">

        <TextView
            android:id="@+id/appCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/titilliumwebregular"
            android:text="0" />

        <TextView
            android:id="@+id/appHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/titilliumwebregular"
            android:text="AP Qty" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dim_0.5"
        android:layout_height="match_parent"
        android:background="@color/app_background_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_8"
        android:paddingTop="@dimen/dim_8">

        <TextView
            android:id="@+id/valueCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/titilliumwebregular"
            android:text="0" />

        <TextView
            android:id="@+id/ValueCountHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/titilliumwebregular"
            android:text="Value" />


    </LinearLayout>

    <View
        android:layout_width="@dimen/dim_0.5"
        android:layout_height="match_parent"
        android:background="@color/app_background_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_12">

        <ImageView
            android:id="@+id/attachement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dim_8"
            android:src="@drawable/ic_action_attachment_blue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dim_8"
            android:src="@drawable/ic_action_info_red"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
