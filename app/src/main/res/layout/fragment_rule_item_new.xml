<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dim_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvRuleNo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:padding="@dimen/dim_5"
                android:text="@string/rule_no"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14sp" />
            <ImageView
                android:id="@+id/imvRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="5dp"
                android:src="@drawable/ic_action_delete" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/dim_200"
                    android:layout_gravity="center_vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:cardCornerRadius="@dimen/dim_4"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    card_view:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dim_10"
                        android:orientation="vertical">
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dim_5"
                            android:gravity="left|center_vertical"
                            android:text="@string/product"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvProductGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dim_5"
                            android:gravity="left|center_vertical"
                            android:text="@string/product_group"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvProductCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dim_5"
                            android:gravity="left|center_vertical"
                            android:text="@string/product_category"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSubCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dim_5"
                            android:gravity="left|center_vertical"
                            android:text="@string/sub_category"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSKU"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:text="@string/sku"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:text="@string/brand"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSchemeType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:text="@string/scheme_type"
                            android:background="@drawable/white_background_top"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSlabDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:text="@string/slab_details"
                            android:background="@drawable/white_background_top"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSchemePeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:text="@string/scheme_period"
                            android:background="@drawable/white_background_top"
                            android:padding="@dimen/dim_5"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvEligibilityBasedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:background="@drawable/white_background_top"
                            android:text="@string/eligibility_based_on"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvDiscountType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:background="@drawable/white_background_top"
                            android:text="@string/discount_type"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                        android:id="@+id/tvDiscountBasedOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/dim_5"
                        android:background="@drawable/white_background_top"
                        android:text="@string/discount_based_on"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_size_14sp" />
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/dim_5"
                            android:text="@string/notes"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_size_14sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim_5"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProductGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProductCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSKU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSchemeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvEligibilityBasedOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDiscountType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvDiscountBasedOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</ScrollView>