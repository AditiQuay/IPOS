<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background"
    android:padding="@dimen/dim_4">

    <LinearLayout
        android:id="@+id/includeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_4">

        <RelativeLayout
            android:id="@+id/grnHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebregular"
                android:text="GRN181900001"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/dim_14"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/titilliumwebregular"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="open"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/dim_14"
                android:visibility="visible" />

        </RelativeLayout>

        <include layout="@layout/view_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/billing" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/grnQtyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="0" />

                    <TextView
                        android:id="@+id/grnQtyCountHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="GRN QTY" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/apQtyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="0" />

                    <TextView
                        android:id="@+id/apQtyCountHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="AP QTY" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_2"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/dim_4"
                        android:background="@color/colorPrimary"
                        android:foregroundGravity="bottom"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/balanceQtyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="0" />

                    <TextView
                        android:id="@+id/balanceQtyCountHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/titilliumwebregular"
                        android:text="Value" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_2"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/dim_4"
                        android:background="@color/colorPrimary"
                        android:foregroundGravity="bottom"
                        android:visibility="invisible" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_action_attachement" />


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>