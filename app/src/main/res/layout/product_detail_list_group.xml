<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dim_8"
    android:layout_marginRight="@dimen/dim_8"
    android:background="@drawable/rectangle_white"
    android:gravity="center"
    android:padding="@dimen/dim_8"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_4">

            <ImageView
                android:id="@+id/imageViewGroupIcon"
                android:layout_width="@dimen/dim_15"
                android:layout_height="@dimen/dim_15"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:alpha="0.7"
                android:paddingEnd="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10" />

            <TextView
                android:id="@+id/textViewGroupName"
                android:textSize="@dimen/universal_text_size14"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageViewGroupIcon"
                android:layout_toRightOf="@+id/imageViewGroupIcon"
                android:alpha="0.7"
                android:paddingEnd="@dimen/dim_10"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:text="Item Name" />

            <ImageView
                android:id="@+id/imageViewGroupArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:alpha="0.7"
                android:paddingEnd="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:src="@drawable/ic_action_arrow" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>