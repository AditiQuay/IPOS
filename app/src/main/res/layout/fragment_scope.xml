<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    android:maxHeight="@dimen/dim_200"
    app:cardCornerRadius="@dimen/dim_4"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    card_view:cardElevation="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dim_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvLOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/dim_5"
                    android:text="@string/lob"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvLOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llEntity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvEntity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:text="@string/entity"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvEntity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:text="@string/state"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvBusinessPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:padding="@dimen/dim_5"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:text="@string/business_places"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvBusinessPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvCustomerGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:padding="@dimen/dim_5"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:text="@string/customer_group"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvCustomerGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>