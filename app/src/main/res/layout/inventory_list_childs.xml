<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dim_8">

    <LinearLayout
        android:id="@+id/includeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_four_white"
        android:orientation="vertical"
        android:padding="@dimen/dim_4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_1">
            <TextView
                android:id="@+id/tvPoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:text="PO180001"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_14" />
            <TextView
                android:id="@+id/tvOpen"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="open"
                android:padding="8dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/rect_one_side_round_grey"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_14" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sepeartor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ipos_line_black" />





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/image"
                android:layout_width="34dp"
                android:layout_height="@dimen/dim_34"
                android:visibility="gone"
                android:background="@drawable/if_light_bulb"
                />
            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/image"
                android:visibility="visible"
                android:text="SC12345"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/dim_14" />
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvOrderNumber"
                android:visibility="visible"
                android:text="Agro Chemicals"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/dim_14" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26,800"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 May 2018"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:visibility="gone"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_8"
                        android:text="@string/mdtp_date"
                        android:textColor="@color/dashboard_textcolor" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26,800"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_8"
                        android:text="Value"
                        android:textColor="@color/dashboard_textcolor" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>