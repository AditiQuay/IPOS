<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    android:maxHeight="@dimen/dim_200"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="@dimen/dim_4"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dim_8">
            <ImageView
                android:id="@+id/imvRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="5dp"
                android:src="@drawable/ic_action_delete" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvSchemeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/dim_5"
                    android:text="@string/scheme_type"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <LinearLayout
                    android:id="@+id/llSchemeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rgSchemeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rbProduct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"/>
                            <quay.com.ipos.ui.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/product_based"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rbValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <quay.com.ipos.ui.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/value_based"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rbOthers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <quay.com.ipos.ui.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/others"/>
                        </LinearLayout>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dim_5"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"                    android:background="@drawable/button_rectangle_light_gray"
                    android:text="@string/product"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvSKU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:padding="@dimen/dim_5"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:text="@string/sku"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvSKU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    android:layout_marginBottom="@dimen/dim_4"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:background="@color/backgroundgrey"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvSlabDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:padding="@dimen/dim_5"
                    android:text="@string/slab_details"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <LinearLayout
                    android:id="@+id/llSlabDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilSlabSelectedTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_5"
                        android:paddingBottom="@dimen/dim_5">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tieSlabSelectedTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:inputType="number"
                            android:layout_gravity="bottom|center_vertical"
                            android:gravity="bottom|center_vertical"
                            android:hint="Slab to "
                            android:textSize="@dimen/universal_text_size16" />

                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilSlabSelectedFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_5"
                        android:paddingBottom="@dimen/dim_5">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tieSlabSelectedFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:inputType="number"
                            android:layout_gravity="bottom|center_vertical"
                            android:gravity="bottom|center_vertical"
                            android:hint="Slab From "
                            android:textSize="@dimen/universal_text_size16" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvSchemePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:text="@string/scheme_period"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:padding="@dimen/dim_5"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <LinearLayout
                    android:id="@+id/llSchemePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llSelectTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:orientation="horizontal">
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSelectedTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select To: "
                            android:padding="@dimen/dim_5"
                            android:layout_gravity="center_vertical"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/calendar"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llSelectFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dim_5"
                        android:layout_marginTop="@dimen/dim_5"
                        android:orientation="horizontal">
                        <quay.com.ipos.ui.CustomTextView
                            android:id="@+id/tvSelectedFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select From: "
                            android:padding="@dimen/dim_5"
                            android:layout_gravity="center_vertical"
                            />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/calendar"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/lightgray_stroke_corner"
                android:orientation="vertical">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center_vertical"
                    android:drawableEnd="@drawable/arrow_down_small_blue"
                    android:padding="@dimen/dim_5"
                    android:background="@drawable/button_rectangle_light_gray"
                    android:text="@string/notes"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14sp" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_8">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tieNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="4"
                        android:inputType="textMultiLine"
                        android:layout_gravity="bottom|center_vertical"
                        android:gravity="bottom|center_vertical"
                        android:hint="Notes "
                        android:textSize="@dimen/universal_text_size16" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>