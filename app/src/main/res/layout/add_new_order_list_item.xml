<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dim_2"
    android:background="@drawable/item_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imvProduct"
            android:src="@drawable/if_light_bulb"
            android:layout_width="100dp"
            android:padding="@dimen/dim_5"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dim_5"
            android:background="@color/divider_color"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">
            <quay.com.ipos.ui.CustomTextView
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Missile"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/accent_color"
                app:typeface="TitilliumWeb-SemiBold.ttf"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_4"
                android:orientation="horizontal">

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dim_10"
                    android:text="250"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />
                <ImageView
                    android:id="@+id/imvInfo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_action_info_gray"/>
                <View
                    android:layout_width="@dimen/dim_1"
                    android:layout_height="@dimen/dim_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dim_5"
                    android:layout_marginRight="@dimen/dim_5"
                    android:background="@color/accent_color"/>

                <quay.com.ipos.ui.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dim_10"
                    android:text="@string/stock"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvItemStockAvailabilty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dim_10"
                    android:text="@string/available"
                    android:textColor="@color/colorAccentGreen"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dim_15"
                    android:paddingRight="@dimen/dim_15"
                    android:textColor="@color/accent_color"
                    android:text="-"
                    android:textSize="@dimen/text_size_21sp"
                    android:background="@color/colorAccent"
                    app:typeface="TitilliumWeb-SemiBold.ttf"/>

                <quay.com.ipos.ui.CustomEditText
                    android:id="@+id/etQtySelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/backgroundgrey"
                    android:paddingBottom="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_5"
                    android:paddingLeft="@dimen/dim_10"
                    android:paddingRight="@dimen/dim_10"
                    android:text="1"
                    android:inputType="number"
                    android:textColor="@color/accent_color"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />

                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dim_15"
                    android:paddingRight="@dimen/dim_15"
                    android:textColor="@color/accent_color"
                    android:text="+"
                    android:textSize="@dimen/text_size_21sp"
                    android:background="@color/colorAccent"
                    app:typeface="TitilliumWeb-SemiBold.ttf"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:drawableLeft="@drawable/ic_action_discount"
                    android:text="@string/an_offer"
                    android:textColor="@color/colorAccentGreen"
                    android:layout_marginRight="@dimen/dim_10"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvCheckStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/check_stock"
                    android:layout_marginTop="@dimen/dim_9"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_5"
                    android:paddingBottom="@dimen/dim_5"
                    android:drawablePadding="@dimen/dim_15"
                    android:textColor="@color/white"
                    android:background="@drawable/button_drawable"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="Roboto-Regular.ttf" />
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvReserved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:drawableLeft="@drawable/ic_action_discount"
                    android:text="@string/reserved"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:textColor="@color/colorAccentGreen"
                    android:layout_marginRight="@dimen/dim_10"
                    android:textSize="@dimen/text_size_11sp"
                    app:typeface="TitilliumWeb-SemiBold.ttf" />
                <quay.com.ipos.ui.CustomTextView
                    android:id="@+id/tvAddCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="center"
                    android:text="@string/cart"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dim_9"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_7"
                    android:paddingRight="@dimen/dim_7"
                    android:paddingTop="@dimen/dim_5"
                    android:paddingBottom="@dimen/dim_5"
                    android:layout_marginRight="@dimen/dim_5"
                    android:drawablePadding="@dimen/dim_15"
                    android:textColor="@color/white"
                    android:background="@drawable/button_drawable"
                    android:textSize="@dimen/text_size_13sp"
                    app:typeface="Roboto-Regular.ttf" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentGreen"
        android:alpha="0.7"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dim_5"
        android:src="@drawable/ic_action_badge_white"/>
</RelativeLayout>