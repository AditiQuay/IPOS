<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dim_8">

    <android.support.v7.widget.CardView
        android:id="@+id/includeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_8">

            <RelativeLayout
                android:id="@+id/rlImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                >

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="R"
                    android:textSize="@dimen/dim_28"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:padding="@dimen/dim_8"
                    android:background="@drawable/textview_circle_app_color"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rlImage">



                <LinearLayout
                    android:id="@+id/llHeaders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_8"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ramesh"
                        android:textColor="@color/textColorPrimaryDark"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dim_16"
                            android:layout_height="@dimen/dim_16"
                            android:background="@drawable/ic_action_search_"/>
                        <TextView
                            android:id="@+id/textViewMobileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="9988383837"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/dim_14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewHeader2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ramesh@gmail.com"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/dim_14" />
                    <TextView
                        android:id="@+id/textViewHeader3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last billing 15-jan 2018 | R 3500"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/dim_14" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dim_16"
                            android:layout_height="@dimen/dim_16"
                            android:background="@drawable/ic_action_search_"/>
                        <TextView
                            android:id="@+id/textViewBirthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="Wish birthday (28th Feb)"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/dim_14" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="@dimen/dim_16"
                        android:layout_height="@dimen/dim_16"
                        android:background="@drawable/ic_action_search_"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/dim_8"
                        android:text="500 Pts"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/dim_14" />
                    <ImageView
                        android:layout_width="@dimen/dim_16"
                        android:layout_height="@dimen/dim_16"
                        android:layout_marginTop="@dimen/dim_8"
                        android:background="@drawable/ic_action_search_"/>
                </LinearLayout>



            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>