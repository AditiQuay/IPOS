<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llIncoTerms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dim_4"
    android:layout_marginLeft="@dimen/dim_4"
    android:layout_marginRight="@dimen/dim_4"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true">

            <Spinner
                android:id="@+id/spnOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:fontFamily="@font/titilliumwebregular"
                android:padding="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/titilliumwebregular"
                android:gravity="center"
                android:padding="8dp"
                android:textAllCaps="false"
                android:text="Details"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/ipos_line_black" />


            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/titilliumwebregular"
                android:gravity="center"
                android:textAllCaps="false"
                android:padding="@dimen/dim_8"
                android:text="SENDER" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/ipos_line_black" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/titilliumwebregular"
                android:gravity="center"
                android:padding="8dp"
                android:textAllCaps="false"
                android:text="RECEIVER" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/ipos_line_black" />

            <TextView
                android:id="@+id/tvGst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/titilliumwebregular"
                android:gravity="center"
                android:textAllCaps="false"
                android:padding="8dp"
                android:text="AMOUNT" />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ipos_line_black" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvIncco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8">

    </android.support.v7.widget.RecyclerView>

    <include layout="@layout/ddr_layout_incoterms_total" />
</LinearLayout>