<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EAF8FB"
    android:minHeight="37dp"
    android:maxHeight="37dp"
    android:padding="@dimen/dim_0">

    <LinearLayout
        android:id="@+id/includeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/tvSNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/titilliumwebregular"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/universal_text_size14"
                    tools:text="1" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/ipos_line_black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.1"
                android:gravity="center"
                android:orientation="vertical">

              <!--  <RadioButton
                    android:id="@+id/sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->
                <EditText
                    android:id="@+id/editBatchNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/titilliumwebregular"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:background="@null"
                    android:textSize="@dimen/universal_text_size14"
                    android:maxLines="1"
                    android:inputType="number"
                    tools:text="1234567890" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/ipos_line_black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="vertical">

              <!--  <RadioButton
                    android:id="@+id/reciver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />-->
                <EditText
                    android:id="@+id/editItemCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titilliumwebregular"
                    android:gravity="center"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:textColor="@color/grey"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:textSize="@dimen/universal_text_size14"
                    tools:text="1026" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/ipos_line_black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/delete"
                    />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/ipos_line_black" />


    </LinearLayout>

</RelativeLayout>