<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary"
    android:paddingRight="16dp"
    >

    <TextView
        android:id="@+id/btnStoreSelection"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/c_ipos_store_sel"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:text="@string/txtallstore"
        android:fontFamily="@font/titilliumwebregular"
        android:textColor="#fff"
        android:textSize="12sp" />


    <LinearLayout
        android:id="@+id/filter_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_filter_bg_line"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btnCT_All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ct_circle_indicator"
            android:gravity="center"
            android:text="A"
            android:fontFamily="@font/titilliumwebregular"
            android:textColor="#000000"
            android:textSize="10sp"
            tools:text="A" />

        <TextView
            android:id="@+id/btnCT_Business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ct_circle_indicator"
            android:gravity="center"
            android:text="B"
            android:fontFamily="@font/titilliumwebregular"
            android:textColor="#000000"
            android:textSize="10sp"
            tools:text="B" />

        <TextView
            android:id="@+id/btnCT_Statutory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"

            android:background="@drawable/ct_circle_indicator"
            android:gravity="center"
            android:text="S"
            android:fontFamily="@font/titilliumwebregular"
            android:textColor="#000000"
            android:textSize="10sp"
            tools:text="S" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCategorySelectedFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/filter_holder"
        android:text="All"
        android:fontFamily="@font/titilliumwebregular"
        android:textColor="#fff"
        android:textSize="12sp" />


</RelativeLayout>
