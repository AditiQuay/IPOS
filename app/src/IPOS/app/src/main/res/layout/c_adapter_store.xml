<?xml version="1.0" encoding="utf-8"?>
<!--<layout >-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_bg_grey"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"><!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/bg_curve_grey"
            android:paddingBottom="5dp"
            android:paddingTop="8dp">-->

            <TextView
                android:id="@+id/ipos_block_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:text="My Store 1 | Rohtak, Haryana"
                android:textAppearance="@style/iposfontstyle"
                android:textColor="@color/ipos_block_title_color"
                android:textSize="11sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ipos_block_txt1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mCT_Compliant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="0dp"
                        android:textAppearance="@style/iposfontstyle"
                        android:textColor="@color/ipos_block_title_color"
                        android:textSize="14sp"
                        tools:text="1/1" />

                    <TextView
                        android:id="@+id/mCT_CompliantText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mCT_Compliant"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Compliant"
                        android:textColor="@color/ipos_progress_bottom_title2"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mCT_NonCompliant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="0dp"
                        android:textAppearance="@style/iposfontstyle"
                        android:textColor="@color/ipos_block_title_color"
                        android:textSize="14sp"
                        tools:text="3/5" />

                    <TextView
                        android:id="@+id/mCT_NonCompliantText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mCT_NonCompliant"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Non\nCompliant"
                        android:textColor="@color/ipos_progress_bottom_title2"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mCT_UpcomingEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="0dp"
                        android:textAppearance="@style/iposfontstyle"
                        android:textColor="@color/ipos_block_title_color"
                        android:textSize="14sp"
                        tools:text="2" />

                    <TextView
                        android:id="@+id/mCT_UpcomingEventsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mCT_UpcomingEvents"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Upcoming\nEvents"
                        android:textColor="@color/ipos_progress_bottom_title2"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mCT_ImmediateAttention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="0dp"
                        android:textAppearance="@style/iposfontstyle"
                        android:textColor="@color/ipos_block_title_color"
                        android:textSize="14sp"
                        tools:text="2" />

                    <TextView
                        android:id="@+id/mCT_ImmediateAttentionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mCT_ImmediateAttention"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Immediate\nAttention"
                        android:textColor="@color/ipos_progress_bottom_title2"
                        android:textSize="12sp" />

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
<!--
</layout>-->
