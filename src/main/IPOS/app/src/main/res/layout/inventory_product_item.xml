<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_50"
    android:background="@drawable/white_background_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="@dimen/dim_8">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dim_0.5"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary_100"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/batchNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebregular"
                android:paddingLeft="@dimen/dim_8"
                android:text="10000000"
                android:textColor="@color/grey"
                android:textSize="@dimen/dim_14" />

            <TextView
                android:id="@+id/batchRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumwebregular"
                android:paddingLeft="@dimen/dim_8"
                android:visibility="gone"
                android:textColor="@color/grey"
                android:textSize="@dimen/dim_14" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/dim_0.5"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/dim_8">

            <EditText
                android:id="@+id/qty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:inputType="number"
                android:maxLength="5"
                android:focusable="true"
                android:background="@color/transparent"
                android:fontFamily="@font/titilliumwebregular"
                android:gravity="center"
                android:textSize="@dimen/dim_14" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0.5"
        android:background="@color/grey" />


</RelativeLayout>