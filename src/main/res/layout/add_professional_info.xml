<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8"
    android:maxHeight="@dimen/dim_200"
    app:cardCornerRadius="@dimen/dim_4"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dim_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_4">

            <TextView
                android:id="@+id/textViewProfessionalHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Professional Information"
                android:textColor="@color/black"
                android:textSize="@dimen/universal_text_size18" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDesignation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tieDesignation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/titilliumwebregular"
                android:hint="Designation"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="text"
                android:lines="1"
                android:textSize="@dimen/universal_text_size16" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_2"
            android:layout_marginRight="@dimen/dim_2"
            android:layout_marginTop="@dimen/dim_8"
            android:orientation="horizontal"
            android:padding="@dimen/dim_2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilCompany"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/tieCompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/titilliumwebregular"
                        android:fontFeatureSettings=""
                        android:hint="Company"
                        android:inputType="text"
                        android:lines="1"
                        android:textSize="@dimen/universal_text_size16" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilGstn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editGstin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
                        android:hint="GSTIN Number"
                        android:lines="1"
                        android:textSize="@dimen/universal_text_size16" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_2"
            android:layout_marginRight="@dimen/dim_2"
            android:layout_marginTop="@dimen/dim_8"
            android:orientation="horizontal"
            android:padding="@dimen/dim_2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/customerTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    app:ms_alignLabels="true"
                    app:ms_baseColor="@color/grey"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="true"
                    app:ms_errorColor="@color/red"
                    android:textSize="@dimen/universal_text_size16"
                    app:ms_floatingLabelColor="@color/grey"
                    app:ms_floatingLabelText="Customer Type"
                    app:ms_highlightColor="@color/highlight"
                    app:ms_hint="Customer Type"
                    app:ms_hintColor="@color/grey"
                    app:ms_multiline="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/relationShipSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:layout_marginRight="@dimen/dim_4"
                    app:ms_alignLabels="true"
                    app:ms_baseColor="@color/grey"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="true"
                    app:ms_errorColor="@color/red"
                    android:textSize="@dimen/universal_text_size16"
                    app:ms_floatingLabelColor="@color/grey"
                    app:ms_floatingLabelText="Relationship"
                    app:ms_highlightColor="@color/highlight"
                    app:ms_hint="Relationship"
                    app:ms_hintColor="@color/grey"
                    app:ms_multiline="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

